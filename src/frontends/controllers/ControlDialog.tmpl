#include "ControlDialog.h"

#include "ButtonControllerBase.h"
#include "ViewBase.h"


template <class Base>
ControlDialog<Base>::ControlDialog(LyXView & lv, Dialogs & d)
	: Base(lv, d), dialog_built_(false)
{}


template <class Base>
void ControlDialog<Base>::show()
{
	if (isBufferDependent() && !bufferIsAvailable())
		return;

	connect();

	if (!dialog_built_) {
		view().build();
		dialog_built_ = true;
	}

	setParams();
	if (emergency_exit_) {
		hide();
		return;
	}

	bc().readOnly(bufferIsReadonly());
	view().show();

	// The widgets may not be valid, so refresh the button controller
	bc().refresh();
}

template <class Base>
void ControlDialog<Base>::update()
{
	if (isBufferDependent() && !bufferIsAvailable())
		return;

	setParams();
	if (emergency_exit_) {
		hide();
		return;
	}

	bc().readOnly(bufferIsReadonly());
	view().update();

	// The widgets may not be valid, so refresh the button controller
	bc().refresh();
}

template <class Base>
void ControlDialog<Base>::hide()
{
	emergency_exit_ = false;
	clearParams();

	disconnect();
	view().hide();
}
