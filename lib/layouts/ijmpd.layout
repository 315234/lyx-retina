Style ItemList
  Category	List
  Margin	Static
  LatexType	Item_Environment
  LatexName	itemlist
  NextNoIndent	1
  LeftMargin	MMN
  LabelSep	xx
  ItemSep	0.2
  TopSep	0.7
  BottomSep	0.7
  ParSep	0.3
  Align		Block
  AlignPossible	Block, Left
  LabelType	Itemize
  LabelString	"*"
  HTMLTag	ul
  HTMLItem	li
  HTMLLabel	NONE
End

Style RomanList
  Category	List
  Margin	Static
  LatexType	Item_Environment
  LatexName	romanlist
  OptionalArgs	1
  NextNoIndent	1
  LeftMargin	MMN
  LabelSep	xx
  ParSkip	0.0
  ItemSep	0.2
  TopSep	0.7
  BottomSep	0.7
  ParSep	0.3
  Align	Block
  AlignPossible	Block, Left
  LabelType	Enumerate
  LabelCounter	"enum"
  HTMLTag	ol
  HTMLItem	li
  HTMLLabel	NONE
  RefPrefix	enu
End

Counter remark
  Within	section
End
Style Remark
  LatexName	remark
  Category	Theorem
  LabelCounter	remark
  LabelString	"Remark \theremark."
  LatexType	Environment
  Margin	First_Dynamic
  TopSep	0.6
  BottomSep	0.6
  Align		Block
  LabelType	Counter
  LabelSep	M
  NextNoIndent	1
  LabelFont
   Series	Bold
  EndFont
End

Counter theorem
  Within	section
End
