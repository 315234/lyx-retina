Style Caption
	Margin                First_Dynamic
	LatexType             Command
	LatexName             caption
	NeedProtect           1
	LabelSep              xx
	ParSkip               0.4
	TopSep                0.5
	Align                 Block
	AlignPossible         Block, Left
	LabelType             Sensitive
	LabelString           Caption
	LabelFont 
	  Series              Bold
	EndFont
End


Style FigCaption
	Margin                First_Dynamic
	LatexType             Command
	LatexName             figcaption
	LatexParam            [FileName]
	LabelSep              xx
	ParSkip               0.4
	TopSep                0.5
	Align                 Block
	AlignPossible         Block, Left
	LabelType             Static
	LabelString           "Fig. --- "
End
