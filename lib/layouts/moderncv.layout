# General textclass parameters
Format 4
	Columns			1
	Sides			1
	SecNumDepth		-1
	TocDepth		-1


# Standard style definition
Style Standard
	Margin			Static
	LatexType		Paragraph
	LatexName		dummy
	ParIndent		MM
	ParSkip			0.4
	Align			Block
	AlignPossible		Block, Left, Right, Center
	LabelType		No_Label
End

Input stdcounters.inc

Style Section
	Margin			Dynamic
	LatexType		Command
	LatexName		section
	NeedProtect		1
	NextNoIndent		1
	ParSkip			0.4
	TopSep			1.3
	BottomSep		0.7
	ParSep			0.7
	Align			Block
	AlignPossible         	Block, Left
	LabelSep		xxx
	LabelType		No_Label
	Font
	  Family		Sans
	  Series		Bold
	EndFont
End

Style Entry
	Margin			Dynamic
	LatexType		Command
	LatexName		cventry
	OptionalArgs		1
	ParSkip			0.4
	Align			Block
	LabelSep		xx
	LabelType		Static
	LabelString		"Entry:"
	LabelFont
	  Series		Bold
	  Color			Blue
	EndFont
End

