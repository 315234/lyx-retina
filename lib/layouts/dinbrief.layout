  TopSep		0.4
  BottomSep		0.4
  ParSep		0.4
  Align 		Block
  AlignPossible 	Block, Left
  LabelType		Static
  LabelString		PS:
  LabelFont 
    Series		Medium
    Shape		Italic
    Size                Small
    Color               blue
  EndFont
End

