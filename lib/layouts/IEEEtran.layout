## stdstruct
##
Input stdstruct.inc

Style Abstract
  Margin                First_Dynamic
  LeftMargin		""
  RightMargin		""
#  ParIndent		MM
  LabelSep              M
  LabelType		Static
  LabelString		"Abstract---"
#  LabelBottomSep        0.0

  # standard font definition
  Font 
    Series              Bold
    Size		Small
  EndFont

  # label font definition
  LabelFont
    Shape               Italic
    Series		Medium
    Size		Small
  EndFont
End 

Style Keywords
  Margin		Dynamic
  LatexType		Environment
  InTitle		0
  LatexName		keywords
  ParSkip		0.4
  BottomSep		1.5
  ParSep		1.5
  Align			Left
  AlignPossible		Block, Left, Right, Center
  LabelType		Static
  LabelString		"Keywords---"
  # label font definition
  TextFont
    Shape               Up
    Size                Small
  EndFont
  LabelFont
    Shape		Italic
    Size                Small
  EndFont
End

