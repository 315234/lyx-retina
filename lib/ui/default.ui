#
# VIEW MENU
#
    Menu "view"
	ViewFormats
	OptItem "Build Program|B" "build-program"
	Submenu "Update|U" "update"
	Separator
	Item "LaTeX Logfile|L" "latex-view-log"
	Item "Table of Contents|T" "toc-view"
    End

    Menu "update"
	UpdateFormats
    End

