    Menu "insert_file"
	Item "LyX Document...|X" "file-insert"
	Item "Ascii as Lines...|L" "file-insert-ascii lines"
	Item "Ascii as Paragraphs...|P" "file-insert-ascii paragraphs"
    End

#
