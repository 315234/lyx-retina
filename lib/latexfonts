	Package          lmodern
EndFont

Font mdbch
	GuiName          "Bitstream Charter (Mathdesign)"
	Family           rm
	OsfOption        expert
	ScOption         expert
	OsfScOption      expert
	Package          mathdesign
	PackageOption    charter
	Requires         mdbch
	Provides         amssymb,amsfonts
EndFont

